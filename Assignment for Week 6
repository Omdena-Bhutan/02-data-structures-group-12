        "#*args Adder\n",
        "\n",
        "def my_sum(*numbers):\n",
        "    total = 0\n",
        "    for num in numbers:\n",
        "        total += num\n",
        "    return total\n",
        "\n",
        "print(my_sum(1, 2, 3))\n",
        "print(my_sum(10, 60, 30, 40, 50))\n",
        "print(my_sum(20,100,300,699,599))"
