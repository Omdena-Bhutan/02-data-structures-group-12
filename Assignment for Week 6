        "#*args The Greeter\n",
        "\n",
        "def greet(*names):\n",
        "  for name in names:\n",
        "    print(f\"Hello, {name}!\")\n",
        "\n",
        "greet(\"Phuntsho\")\n",
        "print(\"---\")\n",
        "greet(\"leki\", \"Loday\")"
